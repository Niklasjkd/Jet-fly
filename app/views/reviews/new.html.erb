
<style>
  #review_content {
    height: 100px;
    display: flex;
    justify-content: center;
    text-align: center;
  }
</style>
<div class="container d-flex flex-column justify-content-center align-items-center col-9" style="margin-top: 100px;">
  <p></p>
  <%= form_for [@plane, @booking, @review] do |f| %>
  <label for="review" class="d-flex justify-content-center">Leave a Review</label>
  <div id="review" rows="3" style="height: 100px;">
    <%= f.text_field :content, placeholder: "Min 20 characters", class: "form-control"%>
  </div>
  <div class="mt-3">
    <%= f.submit "Submit", class: 'btn btn-primary w-100' %>
  </div>
  <% end %>
</div>
