<div class="container mt-3">
  <h1>My Bookings</h1>
  <div class="book-deck card-deck">
    <% @bookings.each do |booking| %>
    <div class="card">
      <h5 class="card-header"> <%= booking.plane.description%></h5>
      <div class="card-body d-flex">
        <div class="card-text flex-grow-1">
          <h5 class="card-title"> <%= booking.destination.capitalize %> to <%= booking.plane.location.capitalize %></h5>
          <p class="card-text text-secondary">On <%= booking.start_date %></p>
          <%= link_to "Delete Booking", plane_booking_path(params[:plane_id], booking.id), method: :delete,  class: "btn btn-danger" %>
        </div>
        <%= cl_image_tag(booking.plane.image, crop: :fill, class: "rounded", style: "width: 300px;") %>
      </div>
    </div>
    <% end %>
  </div>
</div>

