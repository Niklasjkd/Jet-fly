<div class="container">
  <div class="jumbotron mt-5" style="box-shadow: 5px 5px 30px rgba(0,0,0,0.2); background-color: white; border-radius: 30px; ">
    <h1 class="display-4">
      <% unless params[:book][:departure_date].empty?%>
      <% @date = params[:book][:departure_date] %>
      <% else %>
       <% @date = params[:book][:default_date] %>
        <% end %>
      <strong><%= params[:book][:location].capitalize %></strong> to <strong> <%=  params[:book][:destination].capitalize %></strong> has been confirmed on <strong> <%= @date %> </strong>

    </h1>
   <div>
    <p class="lead">Your new booking</p>
     <hr class="my-4">
     <p>In order to confirm your booking, press the button below.</p>
     <p><strong>Price for your trip:</strong> <% @price = params[:book][:base_price] %>
      <%= @price %>â‚¬</p>
     <%= link_to "Confirm booking", plane_bookings_path(destination: params[:book][:destination], user_id: params[:book][:user_id], plane_id: params[:book][:plane_id], start_date: @date), method: "post",  class: "btn btn-primary btn-lg" %>
   </div>
  </div>
</div>
