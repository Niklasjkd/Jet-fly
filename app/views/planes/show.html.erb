<div class="bg-light">
  <!-- plane info -->
  <div class="container mt-3 p-3 bg-white">
      <div class="row">
        <div class="col-8">
         <h3> <%= @plane.description %> </h3>
         <p>Only Jet Fly offers members the unique ability to offset the cost of a charter by sharing the seats they do not need. You create the charter and get flight credits when anyone purchases your extra seats. Flight credits can be used to book future flights, extra seats, and more! Anyone (members or non-members) can book seats on a Shared Charter.</p>
       </div>
       <div class="col-4">
        <%= cl_image_tag(@plane.image, crop: :fill, class: "rounded w-100")  %>
      </div>
    </div>
</div>
<!-- plane info -->

<!-- flight menu / checkout-->
<div class="container py-3">
  <div class="row">
    <div class="col-8">
      <h2 class="text-secondary">Flight Info</h2>
      <div class="mb-3 p-3 bg-white rounded border">
        <p><strong>Destination</strong></p>
        <p><small><%= @plane.location %> to <span id="destination"><%=  params[:destination] %></span></small></p>
        <p><%= "Date: #{params[:date]}"  %></p>
      </div>
      <div class="mb-3 p-3 bg-white rounded border">
        <p><strong>Map</strong></p>
        <div id="map" style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
      </div>
      <div class="mb-3 p-3 bg-white rounded border">
        <p><strong>Reviews</strong></p>
        <% @plane.bookings.each do |booking| %>
          <% booking.reviews.each do |review| %>
            <p class="m-0 text-muted"><%= review.booking.user.full_name %></p>
            <p class="pl-4"> <%= review.content %> </p>
          <% end %>
        <% end %>
      </div>
      <!-- /menu -->
    </div>
    <div class="col-4">
      <!-- checkout -->
      <div class="bg-white border p-3 mt-3">
        <% if user_signed_in? %>
          <%= simple_form_for :book, url: new_plane_booking_path(destination: params[:destination], user_id: @user.id, plane_id: params[:id], date: params[:date], location: @plane.location), method: "get" do |f| %>

            <%= f.input :departure_date, placeholder: params[:departure_date], input_html: {class: "datepicker"}%>
            <%= f.hidden_field :default_date, value: params[:departure_date] %>
            <%= f.hidden_field :plane_id, value: params[:plane_id] %>
            <%= f.hidden_field :user_id, value: @user.id %>
            <%= f.hidden_field :destination, value: params[:destination] %>
            <%= f.hidden_field :location, value: @plane.location %>
            <%= f.button :submit, "Book", class: "btn btn-primary w-100" %>
          <% end %>


        <% else  %>
          <%= simple_form_for :book, url: new_user_session_path, method: "get" do |f| %>
            <%= f.input :departure_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.button :submit, "Login and Book",  class: "btn btn-primary w-100" %>
          <% end %>
        <% end %>

        <div class="mt-3 d-flex justify-content-between">
          <p><strong>Charter</strong> (1)</p>
          <p> <%= @base_price %>€ </p>
        </div>

        <div class="mt-3 d-flex justify-content-between">
          <p><strong>Flight</strong> (2)</p>
          <p> <%= @flight_cost %>€ </p>
        </div>

        <div class="pt-3 d-flex justify-content-between border-top">
          <p><strong>Total</strong></p>
          <p><strong> <%= @total_cost %>€</strong></p>
        </div>
      </div>
      <!-- /checkout -->
    </div>
  </div>
</div>
